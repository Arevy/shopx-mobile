{
  "name": "shopx-mobile",
  "version": "0.1.0",
  "private": true,
  "main": "desktop/main.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "REACT_NATIVE_NO_START_SERVER=1 RCT_NO_LAUNCH_PACKAGER=1 react-native run-ios",
    "start": "react-native start",
    "web": "webpack serve --config web/webpack.config.js --mode development",
    "web:build": "webpack --config web/webpack.config.js --mode production",
    "desktop": "npm run desktop:dev",
    "desktop:dev": "concurrently --kill-others --names \"web,desktop\" \"npm run web\" \"node scripts/start-desktop-dev.js\"",
    "desktop:build": "npm run web:build && electron-builder",
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --max-warnings=0 . --fix",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests are temporarily disabled for the RN 0.82 migration\" && exit 0",
    "test:watch": "echo \"Tests are temporarily disabled for the RN 0.82 migration\" && exit 0",
    "prettier": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@react-navigation/bottom-tabs": "^7.7.3",
    "@react-navigation/drawer": "^7.7.2",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "@reduxjs/toolkit": "^2.3.0",
    "@rtk-query/graphql-request-base-query": "^2.0.0",
    "graphql": "^16.10.0",
    "graphql-request": "^7.1.0",
    "i18next": "^25.6.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "^16.2.3",
    "react-native": "0.82.1",
    "react-native-web": "^0.21.2",
    "react-native-config": "^1.5.9",
    "react-native-device-info": "^14.1.1",
    "react-native-gesture-handler": "^2.29.0",
    "react-native-localize": "^3.6.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.18.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-worklets": "^0.5.2",
    "react-native-worklets-core": "^1.6.2",
    "react-redux": "^9.1.2",
    "redux-persist": "^6.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.82.1",
    "@react-native/eslint-config": "0.82.1",
    "@react-native/metro-config": "0.82.1",
    "@react-native/typescript-config": "0.82.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.5.2",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.3",
    "@types/webpack-env": "^1.18.4",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-redux": "^7.1.33",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "patch-package": "^8.0.1",
    "prettier": "3.3.3",
    "react-test-renderer": "19.1.1",
    "style-loader": "^4.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "dotenv": "^16.4.5",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "wait-on": "^7.2.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "build": {
    "appId": "com.shopxmobile.desktop",
    "productName": "ShopX Desktop",
    "files": [
      "desktop/**/*",
      "web/dist/**/*",
      "app.json",
      "package.json"
    ],
    "directories": {
      "output": "dist-desktop",
      "buildResources": "desktop/resources"
    },
    "dmg": {
      "format": "UDZO"
    },
    "mac": {
      "category": "public.app-category.shopping",
      "target": ["zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "tar.gz"]
    }
  }
}
